<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicSelectActivity">

    <Button
        android:id="@+id/topic_subtraction_btn"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:onClick="launchActivity"
        android:text="Subtraction"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/topic_multiplication_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/topic_multiplication_btn"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:onClick="launchActivity"
        android:text="Multiplication"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/topic_division_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/topic_division_btn"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginBottom="304dp"
        android:onClick="launchActivity"
        android:text="Division"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/topic_addition_btn"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:onClick="launchActivity"
        android:text="Addition"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/topic_subtraction_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>