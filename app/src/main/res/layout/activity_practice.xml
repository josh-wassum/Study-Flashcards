<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeActivity">

    <Button
        android:id="@+id/home_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="launchHome"
        android:text="HOME (debug)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/practice_question"
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:layout_marginTop="188dp"
        android:text="Question"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/practice_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/practice_score"
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:layout_marginTop="88dp"
        android:text="# Total"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/practice_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/practice_topic"
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:text="Topic"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/practice_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/practice_answer"
        android:layout_width="234dp"
        android:layout_height="57dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="answer"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/practice_submit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/practice_submit_btn"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:layout_marginBottom="228dp"
        android:text="Submit"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>